pipeline {
    agent any

    environment {
        DOCKER_IMAGE = 'beztth/devtools_app'
        DOCKER_CREDENTIALS = credentials('dockerhub')
    }

    stages {
        stage('Start Jenkins') {
            steps {
                sh 'echo Start Jenkins............'
                sh 'echo docker : user = $DOCKER_CREDENTIALS_USR : password = $DOCKER_CREDENTIALS_PSW'
            }
        }

        stage('Build Docker Image with Compose') {
            steps {
                dir('./myproject') {
                    sh 'echo "Running in $(pwd)"'
                    sh 'echo start build the Docker image with Compose = $DOCKER_IMAGE'
                    // Build the image using docker-compose
                    sh 'docker-compose build'
                }
            }
        }

        stage('Push to Docker Hub') {
            steps {
                script {
                    // Login to Docker Hub
                    sh 'echo $DOCKER_CREDENTIALS_PSW | docker login --username $DOCKER_CREDENTIALS_USR --password-stdin'
                    // Tag the built image with the correct name
                    sh 'docker tag django_app $DOCKER_IMAGE'
                    // Push the image
                    sh 'docker push $DOCKER_IMAGE'
                }
            }
        }

        // stage('Clear Docker Components') {
        //     steps {
        //         script {
        //             // Stop and remove all containers, then prune the system
        //             sh 'docker-compose down'
        //             sh 'docker system prune -af'
        //         }
        //     }
        // }

        stage('Deploy with Docker Compose') {
            steps {
                script {
                    // Navigate to the project directory that contains docker-compose.yml
                    dir('./myproject') {
                        // Pull the latest image from Docker Hub
                        sh 'docker pull $DOCKER_IMAGE'
                        // Bring up the services with Docker Compose
                        sh 'docker compose up'
                    }
                }
            }
        }
    }

    post {
        always {
            // Logout from Docker Hub
            sh 'docker logout'
        }
    }
}
